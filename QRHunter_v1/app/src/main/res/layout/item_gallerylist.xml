<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="15dp"
    android:padding="10dp"
    android:background="@color/white">
    <ImageView
        android:id="@+id/default_qr_code"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_default_qr_code_24"/>

    <TextView
        android:id="@+id/qr_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="80dp"
        android:gravity="right"
        android:text="Location:None"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/qr_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/qr_location"
        android:layout_marginStart="80dp"
        android:gravity="right"
        android:text="Comment:None"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/qr_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="40dp"
        android:gravity="right"
        android:text="Score:"
        android:textSize="18sp"
        android:textStyle="bold" />

</RelativeLayout>